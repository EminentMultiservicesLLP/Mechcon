@model BISERP.Area.Purchase.Models.PurchaseIndentModel
@{
    Layout = null;
}
<html>
<head>
    <title></title>
</head>
<body>
    <div style="width: 95%; margin: 10px;">
        <div align="center">
            <h2>New Purchase Indent</h2>
        </div>
        <table style="padding: 2px;">
            <tr>
                <td style="text-align: left">Indent NO:@Model.IndentNumber</td>
            </tr>
            <tr>
                <td style="text-align: left">Date:@Model.IndentDate.ToString("dd-MMM-yyyy")</td>
            </tr>
            <tr>
                <td style="align-content: stretch;">
                    <u>Indent Requested by</u>: <b>@Model.Indent_FromStore</b>
                </td>
            </tr>
            <tr>
                <td style="align-content: stretch;">
                    <u>Remark</u>: <b>@Model.Remarks</b>
                </td>
            </tr>
            <tr style="height: 20px" />
            <tr>
                <td style="align-content: center">
                    <table style="padding: 5px;" border="1">
                        <tr>
                            <th>Item Name</th>
                            <th>Current Stock</th>
                            <th>Quantity</th>
                        </tr>
                        @foreach (var menu in Model.IndentDetails)
                        {
                            <tr>
                                <td>@menu.ItemName</td>
                                <td>@menu.CurrentQty</td>
                                <td>@menu.ItemQty</td>
                            </tr>
                        }
                    </table>
                </td>
            </tr>
        </table>
        <div>
            <br />
            <u style="color: red;"><b>Note:</b></u> *** This is an automatically generated email, please do not reply ***
        </div>
    </div>
</body>
</html>
