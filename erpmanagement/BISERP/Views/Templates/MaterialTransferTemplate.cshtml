@model BISERP.Areas.Store.Models.Store.MaterialIndentModel
@{
    Layout = null;
}
<html>
<head>
    <title></title>
</head>
<body>
    <div style="width: 95%; margin: 10px;">
        <div align="center">
            <h2>New Material Transfer</h2>
        </div>
        <table style="padding: 2px;">
            <tr>
                <td style="text-align: left">Transfer Date::@DateTime.Now.ToString("dd-MMM-yyyy")</td>
            </tr>
            <tr>
                <td style="text-align: left">Issue NO:@Model.IndentNo</td>
            </tr>
            <tr>
                <td style="align-content: stretch;"></td>
                <u>Transfer From </u>:
                <b>@Model.Indent_FromStore</b> &emsp; &emsp;
                <u>Transfer to</u>:
                <b>@Model.Indent_ToStore</b>
            </tr>
            <tr style="height: 20px"/>
            <tr>
                <td style="align-content: center">
                    <table style="padding: 5px;" border="1">
                        <tr>
                            <th>Item Name</th>
                            <th>Authorised Quantity</th>
                            <th>Issued Quantity</th>
                            <th>Balance Indent Quantity</th>

                        </tr>
                        @foreach (var menu in Model.Materialindentdt)
                        {
                            <tr>
                                <td>@menu.ItemName</td>
                                <td>@menu.Authorised_Quantity</td>
                                <td>@menu.IssuedQuantity</td>
                                <td>@menu.PendingQty</td>
                            </tr>
                        }
                    </table>
                </td>
            </tr>
        </table>
        <div>
            <br />
            <u style="color: red;"><b>Note:</b></u> *** This is an automatically generated email, please do not reply ***
        </div>
    </div>
</body>
</html>

