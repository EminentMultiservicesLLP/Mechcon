@model BISERP.Areas.Store.Models.Store.MaterialIndentModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
    <div style="width: 95%; margin: 10px;">
        <div align="center">
            <h2>Material Indent Authorized</h2>
        </div>
        <table style="padding: 2px;">
            <tr>
                <td style="text-align: left">Indent Date:@Model.Indent_Date.ToString("dd-MMM-yyyy")</td>
                <td style="text-align: left">Authorized Date:@DateTime.Now.ToString("dd-MMM-yyyy")</td>
            </tr>
            <tr>
                <td style="align-content: stretch;">
                    <u>Indent Requested by</u>: <b>@Model.Indent_FromStore</b> &emsp; &emsp; <u>Indent Requested to</u>:<b>@Model.Indent_ToStore</b>
                </td>
            </tr>
            <tr style="height: 20px" />
            <tr>
                <td style="align-content: center">
                    <table style="padding: 5px;" border="1">
                        <tr>
                            <th>Item Name</th>
                            <th>Own Quantity</th>
                            <th>Requested Quantity</th>
                            @*<th>Pending Quantity</th>*@
                            <th>Authorized Quantity</th>
                            <th>Status</th>
                        </tr>
                        @foreach (var menu in Model.Materialindentdt)
                        {
                            <tr>
                                <td>@menu.ItemName</td>
                                <td>@menu.Item_Stock</td>
                                <td>@menu.User_Quantity</td>
                                @*<td>@menu.PendingQty</td>*@
                                <td>@menu.Authorised_Quantity</td>
                                <td>@menu.strauthorised</td>
                            </tr>
                        }
                    </table>
                </td>
            </tr>
        </table>
        <div style="align-content:flex-end">
            <br/>
            <br />
            <u style="color: red;"><b>Note:</b></u> *** This is an automatically generated email, please do not reply ***
        </div>
    </div>
</body>
</html>
