@model BISERP.Areas.Store.Models.Store.GRNModel
@{
    Layout = null;
}
<html>
<head>
    <title></title>
</head>
<body>
    <div style="width: 95%; margin: 10px;">
        <div align="center">
            <h2> GRN Authorization</h2>
        </div>
        <table style="padding: 2px;">
            <tr>
                <td style="text-align: left">GRN NO :@Model.GRNNo</td>
            </tr>
            <tr>
                <td style="align-content: stretch;">
                    <u>GRN Date  </u>: <b>@Model.strGRNDate</b> &emsp; &emsp;&emsp; &emsp; <u>Authorized Date </u>:<b>@DateTime.Now.ToString("dd-MMM-yyyy")</b>
                </td>
            </tr>
            <tr>
                <td style="align-content: stretch;">
                    <u>Grn Requested by</u>: <b>@Model.StoreName</b>
                </td>
            </tr>
            <tr>
                <td style="align-content: stretch;">
                    <u>Supplier </u>: <b>@Model.SupplierName</b> &emsp; &emsp;&emsp; &emsp; <u>DCNo </u>:<b>@Model.DCNo</b>
                </td>
            </tr>
            <tr style="height: 20px" />
            <tr>
                <td style="align-content: center">
                    <table style="padding: 5px;" border="1">
                        <tr>
                            <th>Item Name</th>
                            <th>Quantity</th>
                            <th>Rate</th>
                            <th>Status</th>
                        </tr>
                        @foreach (var menu in Model.GRNDetails)
                        {
                            <tr>
                                <td>@menu.ItemName</td>
                                <td>@menu.Qty</td>
                                <td>@menu.Rate</td>
                                <td>@menu.strauthorized</td>
                            </tr>
                        }
                    </table>
                </td>
            </tr>
        </table>
        <div>
            <br />
            <u style="color: red;"><b>Note:</b></u> *** This is an automatically generated email, please do not reply ***
        </div>
    </div>
</body>
</html>
