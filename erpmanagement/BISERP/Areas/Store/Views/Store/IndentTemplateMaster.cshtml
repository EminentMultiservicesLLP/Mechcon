@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset style="border:none">
        <legend><h4>Indent Template Master</h4></legend>
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">
                        Search Filter
                    </div>
                </div>
                <div id="collapse1" class="panel-collapse collapse">
                    <div class="panel-body">
                        <div class="row ">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <div class="col-sm-1">
                                        @Html.Label("Template Code")
                                    </div>
                                    <div class="col-sm-2">
                                        @Html.TextBox("TemplateCode")
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-1">
                                        @Html.Label("Template Name")
                                    </div>
                                    <div class="col-sm-2">
                                        @Html.TextBox("Template Name")
                                    </div>
                                </div>                                
                                <div class="col-sm-1">
                                    <a href="" class="btn btn-primary" type="button">
                                        Find
                                        <span class="glyphicon glyphicon-search"></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-heading">
                    <div class="panel-title">
                        Search Details
                    </div>
                </div>
                <div class="panel-collapse collapse in" aria-expanded="true">
                    <div class="panel-body">
                        <div class="container fill">
                            <table id="grid" data-source="@Url.Action("GetUnitMasters")"></table>
                        </div>
                    </div>
                </div>

                <fieldset>

                    <div class="row">
                        <div id="content">
                            <div id="content-tab">
                                <ul id="tabs" class="nav nav-tabs" data-tabs="tabs">
                                    <li class="active">
                                        <a href="#tab1" data-toggle="tab">IndentTemplate</a>
                                    </li>


                                </ul>
                                <div id="my-tab-content">
                                    <div class="tab-pane  active" id="tab1">
                                        <div class="col-sm-12">
                                            <br>
                                            <div class="form-group" align="left">
                                                <button type="button" class="btn btn-primary" data-toggle="modal">Add</button>
                                                <a href="" class="btn btn-primary" type="button">Remove</a>

                                            </div>

                                        </div>
                                        <div class="panel-collapse collapse in" aria-expanded="true">
                                            <div class="panel-body">
                                                <div class="container fill">
                                                    <table id="Itemgrid" data-source="@Url.Action("GetUnitMasters")"></table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </fieldset>

            </div>
        </div>
    </fieldset>
    <div class="panel-heading">
        <a data-toggle="collapse" class="btn btn-success" href="#collapse1">Search</a>
        <button type="button" class="btn btn-success">Add</button>
        <button type="button" class="btn btn-success">Save</button>
        <button type="button" class="btn btn-success">Report</button>
    </div>
    <script type="text/javascript">
        var grid;

        function Search() {
            grid.reload({ searchString: $("#search").val() });
        }

        $(document).ready(function () {
            grid = $("#grid").grid({
                dataKey: "ID",
                uiLibrary: "bootstrap",
                columns: [
                    { field: "ID", width: 10, sortable: false, hidden: true },
                     { field: "Code", title: "Code", width: 10, sortable: false },
                    { field: "TemplateName", width: 20, title: "TemplateName", sortable: true },
                    { field: "Indent Template Type", width: 20, title: "Indent Template Type", sortable: true, priority: 2 },


                ],
                pager: { enable: true, limit: 5, sizes: [2, 5, 10, 20] }
            });
            $("#btnSearch").on("click", Search);
        });
        $(document).ready(function () {
            grid = $("#Itemgrid").grid({
                dataKey: "ID",
                uiLibrary: "bootstrap",
                columns: [

                    { field: "ItemName", title: "Item Name", width: 10, sortable: false },
                     { field: "Qty", title: "Qty", width: 10, sortable: false },
                     { field: "Unit", title: "Unit", width: 10, sortable: false },

                ],
                pager: { enable: true, limit: 5, sizes: [2, 5, 10, 20] }
            });
        });
    </script>


}
