    $("#btnSearch").on('click', function () {
        $("#SearchGridModal").modal('show');
        $("#grid").jsGrid("loadData");
    });

    function Clearform() {
        tempID = 0;
        $("#UnitCode").val("");
        $("#UnitName").val("");
        $("#Deactive").prop('checked', false);
        $("#grid").jsGrid("loadData");
