@model BISERP.Areas.Branch.Models.GuardInfoModel
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-groupingBoder">
                <div class="panel-heading">
                    <div class="panel-title">
                        Entry Form
                    </div>
                </div>
                <div id="collapse2" class="panel-collapse collapse in" aria-expanded="true">
                    <div class="panel-body">
                        <fieldset>
                            <legend></legend>
                            <div class="row">
                                <div class="col-sm-12">
                                    <button type="button" class="btn btn-success" id="btnSave">Save</button>
                                    <a data-toggle="collapse" class="btn btn-success" id="btnAdd">Reset</a>
                                </div>
                            </div>
                            <br>

                            <div class="row">
                                <div class="form-group form-horizontal">
                                    <div class="col-sm-3">
                                        @Html.LabelFor(m => m.BranchId, new { @class = "required" })
                                        @Html.DropDownList("ddlBranch", new SelectList(string.Empty, "Value", "Text"), "Select Branch", new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group form-horizontal">
                                    <div class="col-sm-3">
                                        @Html.LabelFor(m => m.EmpFName)
                                        @Html.TextBoxFor(m => m.EmpFName, "", new { @class = "form-control" })
                                        @Html.HiddenFor(m => m.GuardId)
                                    </div>
                                </div>
                                <div class="form-group form-horizontal">
                                    <div class="col-sm-3">
                                        @Html.LabelFor(m => m.EmpMName)
                                        @Html.TextBoxFor(m => m.EmpMName, "", new { @class = "form-control" })
                                        @Html.HiddenFor(m => m.GuardId)
                                    </div>
                                </div>
                                <div class="form-group form-horizontal">
                                    <div class="col-sm-3">
                                        @Html.LabelFor(m => m.EmpLName)
                                        @Html.TextBoxFor(m => m.EmpLName, "", new { @class = "form-control" })
                                        @Html.HiddenFor(m => m.GuardId)
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="form-group form-horizontal">
                                    <div class="col-sm-3">
                                        @Html.LabelFor(m => m.Gender)
                                        <input type="radio" name="Gender" value="0" checked> Male
                                        <input type="radio" name="Gender" value="1"> Female
                                    </div>
                                </div>
                                <div class="form-group form-horizontal">
                                    <div class="col-sm-3">
                                        @Html.LabelFor(m => m.ContactNo)
                                        @Html.TextBoxFor(m => m.ContactNo, "", new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group form-horizontal">
                                    <div class="col-sm-3">
                                        @Html.LabelFor(m => m.Address)
                                        @Html.TextAreaFor(m => m.Address, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group form-horizontal">
                                    <div class="col-sm-3">
                                        @Html.LabelFor(m => m.Designation)
                                        @Html.TextBoxFor(m => m.Designation, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group form-horizontal">
                                    <div class="col-sm-3">
                                        @Html.LabelFor(m => m.Bloodgroup)
                                        @Html.TextBoxFor(m => m.Bloodgroup, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group form-horizontal">
                                    <div class="col-sm-3">
                                        @Html.LabelFor(m => m.DateOfBirth)
                                        <div class='input-group date'>
                                            <input type='text' id="DateOfBirth" class="form-date-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-groupingBoder">
                <div id="collapse2" class="panel-collapse collapse in" aria-expanded="true">
                    <div class="panel-body">
                        <fieldset>

                            <div class="row">
                                <div class="form-group form-horizontal">
                                    <div class="col-sm-3">
                                        @Html.CheckBoxFor(m => m.GuardDt.PoliceVerification)
                                        @Html.LabelFor(m => m.GuardDt.PoliceVerification)
                                    </div>
                                </div>
                                <div class="form-group form-horizontal">
                                    <div class="col-sm-3">
                                        @Html.Label("Upload")
                                        <div>
                                            <input type='file' id="files" multiple="multiple" , disabled="disabled" />
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <ul id="displayImages" class="attachment" style="max-height: 150px; overflow-y: scroll;"></ul>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group form-horizontal">
                                    <div class="col-sm-3">
                                        @Html.LabelFor(m => m.GuardDt.Reference1)
                                        @Html.TextBoxFor(m => m.GuardDt.Reference1, "", new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group form-horizontal">
                                    <div class="col-sm-3">
                                        @Html.LabelFor(m => m.GuardDt.Reference2)
                                        @Html.TextBoxFor(m => m.GuardDt.Reference2, "", new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group form-horizontal">
                                    <div class="col-sm-3">
                                        @Html.LabelFor(m => m.GuardDt.Reference3)
                                        @Html.TextBoxFor(m => m.GuardDt.Reference3, "", new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group form-horizontal">
                                    <div class="col-sm-3">
                                        @Html.LabelFor(m => m.GuardDt.Reference4)
                                        @Html.TextBoxFor(m => m.GuardDt.Reference4, "", new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#DateOfBirth').datepicker({
                defaultDate: new Date(),
                dateFormat: 'dd-M-yy',
                yearRange: '2015:2099',
                showOn: "button",
                buttonImage: "../../Content/images/calendar.gif",
                buttonImageOnly: true,
                changeMonth: true,
                changeYear: true
            });
        });
        $.ajax({
            type: "GET",
            url: "/Master/AllBranches",
            datatype: "Json",
            async: true,
            success: function (data) {
                $.each(data, function (index, value) {
                    $('#ddlBranch').append('<option value="' + value.BranchID + '">' + value.BranchName + '</option>');
                });
            }
        });
        $('#GuardDt_PoliceVerification').change(function () {
            if ($(this).is(':checked')) {
                $("#files").prop('disabled', false);

            } else {
                $("#files").prop('disabled', true);
            }
        });
        $("#btnAdd").on("click", ClearForm);
        function ClearForm() {
            $("#ddlBranch").val("");
            $("#EmpFName").val("");
            $("#EmpMName").val("");
            $("#EmpLName").val("");
            $("#Address").val("");
            $("#ContactNo").val("");
            $("#Bloodgroup").val("");
            $("#DateOfBirth").val("");
            $("#Designation").val("");
            $("#ddlAssetSubType").html("");
            $("#ddlFloor").html("");
            $("#ddlRoom").html("");
            $("#ddlloc").html("");
            $("#Description").val("");
            $("#GuardDt_Reference1").val("");
            $("#GuardDt_Reference2").val("");
            $("#GuardDt_Reference3").val("");
            $("#GuardDt_Reference4").val("");
            $("#GuardDt_PoliceVerification").prop('checked', false);
            $("#Gender").val("");
            $("input[name=Gender][value='0']").prop("checked", true);
            ResetDate("DateOfBirth");
        }

        $("#btnSave").click(function () {
            var gender;
            if ($("[name='Gender']:checked").val() === "1")
                gender = 1;
            else
                gender = 0;

            if ($("#ddlBranch").val() === "") {
                ShowAlert("error", "Please Select Branch");
                return;
            }
            DisableClick("btnSave");
            var itemguardinfo = {
                GuardId: $("#GuardId").val(),
                Reference1: $("#GuardDt_Reference1").val(),
                Reference2: $("#GuardDt_Reference2").val(), //Reading text box values using Jquery
                Reference3: $("#GuardDt_Reference3").val(),
                Reference4: $("#GuardDt_Reference4").val(),
                BranchId: $("#ddlBranch").val(),
                PoliceVerification: $("#GuardDt_PoliceVerification").prop('checked')
            };
            var items = JSON.stringify({
                EmpFName: $("#EmpFName").val(),
                EmpMName: $("#EmpMName").val(), //Reading text box values using Jquery
                EmpLName: $("#EmpLName").val(),
                Gender: gender,
                Address: $("#Address").val(),
                ContactNo: $("#ContactNo").val(),
                Bloodgroup: $("#Bloodgroup").val(),
                DateOfBirth: $("#DateOfBirth").val(),
                Designation: $("#Designation").val(),
                BranchId: $("#ddlBranch").val(),
                GuardDt: itemguardinfo
            });
            $.ajax(
            {
                type: "POST",
                traditional: true,
                contentType: 'application/json; charset=utf-8',
                url: '/GuardDetails/SaveGuardDetails',
                data: items,
                success: function (msg) {
                    if (msg.success) {
                        if (msg.success) {
                            SaveScandoc("files", msg.GuardId, "Branch", "GuardDetails");
                            ShowAlert("success", "GuardDetails saved successfully.");
                            ClearForm();
                            $("#files").val('');
                        }
                        else {
                            ShowAlert("error", msg.Message);
                        }
                    }
                },
                error: function () {
                }
            });
        });
    </script>

}